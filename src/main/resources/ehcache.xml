<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.ehcache.org/v3"
        xmlns:jsr107="http://www.ehcache.org/v3/jsr107"
        xsi:schemaLocation="
            http://www.ehcache.org/v3 https://www.ehcache.org/schema/ehcache-core-3.0.xsd
            http://www.ehcache.org/v3/jsr107 https://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">
    <service>
        <jsr107:defaults enable-management="true" enable-statistics="true"/>
    </service>

    <!-- Persistent cache directory -->
    <persistence directory="spring-boot-ehcache/cache" />

    <!-- Default cache template -->
    <cache-template name="default">
        <expiry>
            <ttl unit="minutes">30</ttl>
        </expiry>

        <resources>
            <offheap unit="MB">100</offheap>
            <disk persistent="true" unit="MB">200</disk>
        </resources>
    </cache-template>

    <cache alias="ru.ntik.book.library.domain.BookDefinition"  uses-template="default">
        <key-type>java.lang.Long</key-type>
        <value-type>ru.ntik.book.library.domain.BookDefinition</value-type>
    </cache>

    <cache alias="ru.ntik.book.library.domain.Publisher"  uses-template="default">
        <key-type>java.lang.Long</key-type>
        <value-type>ru.ntik.book.library.domain.Publisher</value-type>
    </cache>

    <cache alias="ru.ntik.book.library.domain.Author" uses-template="default">
        <key-type>java.lang.Long</key-type>
        <value-type> ru.ntik.book.library.domain.Author</value-type>
    </cache>

    <cache alias="ru.ntik.book.library.domain.Review" uses-template="default">
        <key-type>java.lang.Long</key-type>
        <value-type> ru.ntik.book.library.domain.Review</value-type>
    </cache>

    <cache alias="ru.ntik.book.library.domain.Category" uses-template="default">
        <key-type>java.lang.Long</key-type>
        <value-type> ru.ntik.book.library.domain.Category</value-type>
    </cache>

    <cache alias="ru.ntik.book.library.domain.BookInstance" uses-template="default">
        <key-type>java.lang.Long</key-type>
        <value-type> ru.ntik.book.library.domain.BookInstance</value-type>
    </cache>

    <cache alias="ru.ntik.book.library.domain.BookOrder" uses-template="default">
        <key-type>java.lang.Long</key-type>
        <value-type> ru.ntik.book.library.domain.BookOrder</value-type>
    </cache>

</config>